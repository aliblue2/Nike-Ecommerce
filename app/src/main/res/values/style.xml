<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myBottomnavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_icon_text</item>
        <item name="itemRippleColor">@color/bottom_nav_ripple</item>
        <item name="itemTextAppearanceActive">@style/textActive</item>
        <item name="itemTextAppearanceInactive">@style/textDeactive</item>
    </style>
    <style name="textActive" parent="TextAppearance.Nike.Caption">
        <item name="itemTextAppearanceActive">@color/bottom_nav_icon_text</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/iransans_bold</item>
    </style>
    <style name="textDeactive" parent="TextAppearance.Nike.Caption">
        <item name="itemTextAppearanceInactive">@color/bottom_nav_icon_text</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/iransans_bold</item>
    </style>

    <style name="NikeThemeAuthButton" parent="NikeThemeAuth">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/iransans_bold</item>
    </style>
    <style name="NikeThemeAuthEditText" parent="NikeThemeAuth">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_field</item>
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:textSize">16sp</item>
        <item name="minHeight">42dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>