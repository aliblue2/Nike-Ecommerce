        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m"> true</item>
        <item name="fontFamily">@font/iransans_regular</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Nike.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Nike.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Nike.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Nike.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Nike.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Nike.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Nike.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Nike.Body2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Nike.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Nike.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Nike.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Nike.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Nike.Overline</item>

        <item name="bottomNavigationStyle">@style/MyBottomNavigation</item>
