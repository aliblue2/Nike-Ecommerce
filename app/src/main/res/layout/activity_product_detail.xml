<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".feature.main.product.ProductDetailActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:translationZ="5dp"
    android:layout_height="?actionBarSize"
    android:layout_gravity="top"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    >
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|start"
        android:id="@+id/backDetailProductIc"
        android:src="@drawable/ic_back"/>

    <at.connyduck.sparkbutton.SparkButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:iconSize="25dp"
        android:id="@+id/favoriteDetailBtn"
        app:activeImage="@drawable/ic_filled_favorite_24"
        app:inactiveImage="@drawable/ic_favorite_border"
        android:layout_gravity="center_vertical|end"
        app:primaryColor="@color/red"
        app:secondaryColor="?colorOnSurface"/>

</FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        android:layout_height="?actionBarSize"
        android:alpha="0"
        android:id="@+id/toolbarTransparent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarTitleTv"
            tools:text="@string/popular"
            android:maxLength="25"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="48dp"
            android:textAppearance="@style/TextAppearance.Nike.Headline6"
            android:layout_gravity="center_vertical|start"/>
    </com.google.android.material.card.MaterialCardView>
    <com.alireza.nikeiran.view.scrool.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/observableScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.alireza.nikeiran.view.NikeImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:viewAspectRatio="1.3"
                    android:id="@+id/imageProductDetailIv"/>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/titleProductDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAppearance="?textAppearanceHeadline6"
                    tools:text="@string/popular" />

                <TextView
                    android:id="@+id/previousPriceDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:textAppearance="?textAppearanceBody2"
                    android:textColor="?android:textColorSecondary"
                    tools:text="50000 تومان" />

                <TextView
                    android:id="@+id/priceDetailTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/previousPriceDetailTv"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="450000 تومان" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="این کتونی شدیدا برای دویدن و راه رفتن منساب هست و تقریبا هیچ فشار مخربی روی پا نمیگذارد و فشاری به زانو انتقال داده نمیشود"
                android:textAppearance="?textAppearanceHeadline6" />
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:text="نظرات کاربران"
                    android:textColor="?android:textColorSecondary"
                    android:layout_gravity="center_vertical|start"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="@string/InsertComment"
                    android:layout_gravity="end|center_vertical"
                    android:textAppearance="?textAppearanceHeadline6"/>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bacground_comments_items"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/rvComments"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/btnShowAllComments"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/viewAllComments"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAppearance="@style/TextAppearance.Nike.Headline6"/>

        </LinearLayout>
    </com.alireza.nikeiran.view.scrool.ObservableScrollView>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="@string/addToCart"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="?colorOnPrimary"
        app:iconTint="?colorOnPrimary"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:paddingStart="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:icon="@drawable/ic_cart"
        android:id="@+id/addToCartBtn"
        app:iconGravity="textEnd"
        app:backgroundTint="?colorPrimary"
        android:paddingEnd="12dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>