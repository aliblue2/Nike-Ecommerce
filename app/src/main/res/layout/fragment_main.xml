<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    tools:context=".feature.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_nike_logo"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/background_edittext"
                android:hint="جست و جو محصولات"
                android:textAppearance="@style/TextAppearance.Nike.Headline6"
                android:textColorHint="?android:textColorSecondary"
                android:drawableStart="@drawable/ic_search"
                android:textColor="?colorOnSurface"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:id="@+id/bannerSliderViewPager"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" />
                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/darkgray"
                    android:layout_marginBottom="4dp"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="6dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="4"
                    app:selectedDotColor="?colorPrimary"
                    app:progressMode="false"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="4">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:src="@drawable/img1"/>
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:src="@drawable/img2"/>
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:src="@drawable/img3"/>
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:src="@drawable/img4"/>

            </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:background="@drawable/bachground_offers"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/startHorizontal"
                    android:scrollbars="none"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:fillViewport="true"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="25dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/offersimage1"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/viewLatestProductBtn"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_gravity="bottom|start"
                                android:layout_marginTop="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/viewAll"
                                android:textColor="?colorOnPrimary"
                                app:icon="@drawable/ic_round_list_24"
                                app:iconGravity="end"
                                app:iconTint="?colorOnPrimary" />

                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="1680dp"
                            android:paddingStart="12dp"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="12dp"
                            android:clipToPadding="false"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/lastestProductRvMain"/>

                    </LinearLayout>
                </HorizontalScrollView>



            <FrameLayout
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Nike.Headline6"
                    android:text="@string/popular"
                    android:layout_gravity="center_vertical|start"
                    android:textColor="?android:textColorSecondary"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewAll"
                    android:id="@+id/viewPopularProductBtn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_gravity="center_vertical|end"
                    />
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clipToPadding="false"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content"
                android:id="@+id/popularProductRvMain"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Nike.Headline6"
                    android:text="@string/expensive"
                    android:layout_gravity="center_vertical|start"
                    android:textColor="?android:textColorSecondary"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewExpensiveProductBtn"
                    android:text="@string/viewAll"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_gravity="center_vertical|end"
                    />
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clipToPadding="false"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content"
                android:id="@+id/expensiveProductRvMain"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Nike.Headline6"
                    android:text="@string/poor"
                    android:layout_gravity="center_vertical|start"
                    android:textColor="?android:textColorSecondary"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewAll"
                    android:id="@+id/viewPoorProductBtn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_gravity="center_vertical|end"
                    />
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clipToPadding="false"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content"
                android:id="@+id/poorProductRvMain"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>