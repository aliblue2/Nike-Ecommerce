<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleComment"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Nike.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="خیلی شیکه و راحته" />

    <TextView
        android:id="@+id/authorComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.Nike.Body2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleComment"
        tools:text="توسط سعید شاهینی" />

    <TextView
        android:id="@+id/dateComment"
        android:layout_width="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.Nike.Body1"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="چهارشنبه 20 مرداد 97" />

    <TextView
        android:id="@+id/bodyComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textAppearance="@style/TextAppearance.Nike.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/authorComment"
        tools:text="این کتونی شدیدا برای دویدن و راه رفتن منساب هست و تقریبا هیچ فشار مخربی روی پا نمیگذارد و فشاری به زانو انتقال داده نمیشود" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?dividerColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>